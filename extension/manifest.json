{
  "manifest_version": 3,
  "name": "Phish Hover Agent",
  "version": "1.0.0",
  "description": "Hover a link to see phishing risk score based on KISA phishing URL dataset + signals.",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:8000/*", "https://localhost:8000/*", "<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }
  ],
  "action": { "default_popup": "popup.html" }
}
